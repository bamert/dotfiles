#!/usr/bin/env python3
import glob
import os
from typing import List, Tuple

def find_git_dirs(path: str) -> List[Tuple[str, str]]:
    output = []
    searchpath = os.path.expanduser(path)
    res = glob.glob(f"{searchpath}/**/.git", recursive=True)
    for r in res:
        repo_name = r.split('/')[-2]
        output.append((repo_name,r))
    return output
results = find_git_dirs("~/hades")
for r in results:
    print(f"{r[0]}: {r[1]}")

